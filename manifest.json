{
    "manifest_version": 3,
    "name": "Wordle Hints",
    "description": "Stuck on today's Wordle? Reveal a hidden letter in just a click",
    "version": "1.0",
    "action": {
        "default_icon": { 
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png" 
        },
        "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.nytimes.com/games/wordle/index.html"],
            "js": ["src/content-script.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png" 
    }
}